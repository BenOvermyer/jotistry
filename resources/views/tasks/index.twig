{% extends 'layout' %}

{% block content %}
    <div class="columns" id="tasks-container">
        <div class="column is-3">
            <h2 class="title is-2">Categories</h2>
            <ol class="task-categories">
                <task-category v-for="category in categories" v-bind="category" v-bind:key="category.id" v-bind:class="{ active: category.isActive }" v-on:activate="changeCategory(category)"></task-category>
            </ol>
            <div class="new-task-category-container">
                <input class="new-task-category-title input" v-model="newCategory" v-on:keyup.enter="createNewCategory">
                <button class="new-task-category button is-primary" v-on:click="createNewCategory"><span class="icon is-small"><i class="fa fa-plus"></i></span> New Category</button>
            </div>
        </div>
        <div class="column">
            <h2 class="current-task-category title is-2">{{ '{{' }} currentCategory.title {{ '}}' }}</h2>
            <input v-model="newTask" class="title task-content input content" v-on:keyup.enter="createNewTask">
            <div class="tasks">
                <task v-for="task in tasks" v-bind="task" v-bind:key="task.id" v-on:complete="completeTask(task)"></task>
            </div>
        </div>
    </div>
{% endblock %}
